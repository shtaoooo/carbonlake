{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:prettier/recommended", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "sourceType": "module"
},
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["warn", {
      "singleQuote": true,
      "printWidth": 120
    }],
    "no-console": "off",
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "max-len": ["error", 300, {
      "ignoreStrings": false,
      "ignoreTemplateLiterals": false
    }]
  }
}
